{
  "extends": ["tslint-angular", "tslint-immutable", "tslint-config-prettier"],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "arrow-return-shorthand": true,
    "callable-types": true,
    "class-name": true,
    "deprecation": {
      "severity": "warn"
    },
    "forin": true,
    "import-blacklist": [true, "rxjs/Rx"],
    "interface-over-type-literal": true,
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "prefer-const": true,
    "radix": true,
    "triple-equals": [true, "allow-null-check"],
    "unified-signatures": true,
    "variable-name": false,
    "nx-enforce-module-boundaries": [
      true,
      {
        "allow": [],
        "depConstraints": [
          {
            "sourceTag": "*",
            "onlyDependOnLibsWithTags": ["*"]
          }
        ]
      }
    ],
    "directive-selector": [true, "attribute", "app", "camelCase"],
    "component-selector": [true, "element", "app", "kebab-case"],
    "contextual-decorator": true,
    "contextual-lifecycle": true,
    "no-conflicting-lifecycle": true,
    "no-lifecycle-call": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "no-unused-css": true,
    "no-pipe-impure": true,
    "prefer-output-readonly": true,
    "template-banana-in-box": true,
    "template-no-negated-async": true,
    "template-accessibility-valid-aria": true,
    "template-no-any": true,
    "template-no-autofocus": true,
    "template-conditional-complexity": [true, 4],
    "template-cyclomatic-complexity": [true, 5],
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "cyclomatic-complexity": [true, 6],
    "max-file-line-count": [true, 200],
    "no-parameter-reassignment": true,
    "typedef": [true, "call-signature"],
    "readonly-keyword": [
      true,
      {
        "ignore-prefix": ["mutable", "_"]
      }
    ],
    "no-let": [true, "ignore-local"],
    "no-object-mutation": [
      true,
      {
        "ignore-prefix": ["this._", "mutable"]
      },
      {
        "ignore-pattern": "**.mutable*"
      }
    ],
    "no-delete": true,
    "no-method-signature": true,
    "no-mixed-interface": true,
    "no-expression-statement": false,
    "no-if-statement": false,
    "no-loop-statement": true
  }
}
